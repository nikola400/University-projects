// UPEx8.cpp : Defines the entry point for the console application.
// a program check if a random sumbol is from english alphabet

#include "stdafx.h"
#include <iostream>

using namespace std;


int main()
{
	char sym = 0;//a symbol
	cout << "Enter a symbol: ";
	cin >> sym;
	if (('A' <= sym && 'Z' >= sym) || ('a' <= sym && 'z' >= sym))
	{
		cout << endl << "The symbol is from the english alphabet" << endl;
		if ('a' == sym || 'e' == sym || 'i' == sym || 'o' == sym || 'u' == sym || 'y' == sym || 'A' == sym || 'E' == sym || 'I' == sym || 'O' == sym || 'U' == sym || 'Y' == sym)
		{
			cout << endl << "The symbol from the english alphabet is vowel" << endl;
		}
		else
		{
			cout << endl << "The symbol from the english alphabet is consonant" << endl;
		}
	}
	else
	{
		cout << endl << "The symbol is not from the english alphabet" << endl;
	}
    return 0;
}
