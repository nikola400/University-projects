// UPEx6.cpp : Defines the entry point for the console application.
// some bitwise operations

#include "stdafx.h"
#include <iostream>
#include <string>

using namespace std;


int main()
{
	int number = 0;//the number
	int position = 0;//the position
	cout << "Enter number: ";
	cin >> number;
	cout << endl << "Enter position: ";
	cin >> position;

	int help = 1;
	help << position;
	int bit = (number&help) >> position;

	cout << endl << endl << "The value of the bit in the number " << number << " on position " << position << " is: " << bit << endl;


    return 0;
}
