// UPEx20.cpp : Defines the entry point for the console application.
//this program finds divisors of a number

#include "stdafx.h"
#include <iostream>

using namespace std;


int main()
{
	int a;
	cout << "Enter positive number: ";
	cin >> a;
	if (a > 0)
	{
		if (a != 0)
		{
			cout << endl << "The divisors of " << a << " are: ";
			for (int i = 1; i <= a / 2; i++)
			{
				if (a%i == 0)
					cout << i << " ";
			}
			cout << a << endl;
		}
		else
		{
			cout << endl << "the divisors of " << a << "is: " << a;
		}
	}
	else
	{
		return 1;
	}
	
    return 0;
}
